<h3>Home</h3>
<%= form_tag courses_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search Course", :name => nil %>
  </p>
<% end %>

<% @courses.shuffle.each do |course| %>
  <p>Course: <%= link_to course.title, course %>  Description: <%= course.description %> </p> 
<% end %>
