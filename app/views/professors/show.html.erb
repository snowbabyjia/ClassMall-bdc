<%- model_class = Professor -%>
<div class="page-header">
  <h1><%=t @professor.name %></h1>
</div>

<div class='row-fluid'>
	<div class='span12'>
		<table class="table table-striped">
			  <thead>
			    <tr>
			      <th><%= model_class.human_attribute_name(:title) %></th>
			      <th><%= model_class.human_attribute_name(:starting) %></th>
			      <th><%= model_class.human_attribute_name(:ending) %></th>
			      <th><%= model_class.human_attribute_name(:description) %></th>
			    </tr>
			  </thead>
			<p><%= render :partial => 'course', :collection => @professor.courses%></p>
		</table>
	</div>
</div>
<% if current_user.present? && (current_user.has_role? :admin)%>	
	<div class="form-actions">
	  <%= link_to t('.back', :default => t("helpers.links.back")),
	              professors_path, :class => 'btn'  %>
	  <%= link_to t('.edit', :default => t("helpers.links.edit")),
	              edit_professor_path(@professor), :class => 'btn' %>
	  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	              professor_path(@professor),
	              :method => 'delete',
	              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	              :class => 'btn btn-danger' %>
	</div>
<% end %>
