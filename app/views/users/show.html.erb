<%- model_class = Course -%>
	<div class='row-fluid'>
		<div class='span12'>
			<p>User: <%= @user.name %></p>
			<p>Email: <%= @user.email if @user.email %></p>
			<p>My Major(s): <%= render partial: 'major', :collection => @user.majors%></p>
		</div>
	</div>
	<div class='row-fluid'>
		<div class='span9'>
			<table class="table table-striped">
				  <thead>
				    <tr>
				      <th><%= model_class.human_attribute_name(:title) %></th>
				      <th><%= model_class.human_attribute_name(:starting) %></th>
				      <th><%= model_class.human_attribute_name(:ending) %></th>
				      <th><%= model_class.human_attribute_name(:description) %></th>
				    </tr>
				  </thead>
			    <p> My courses: </p>
				<p><%= render :partial => 'course', :collection => current_user.courses%></p>
			</table>
		</div>
		<div class="span1">
		</div>
		<div class='span2'>
			Declare a major!
			<%= form_for([@user, @user.majors.build]) do |f| %>
			  <%= f.collection_select :id, Major.all, :id, :name, :prompt => true%>
			  <%= f.submit %>
			<% end %>
		</div>
	</div>

