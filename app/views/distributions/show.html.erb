<%- model_class = Distribution -%>
<div class="page-header">
  <h1><%=t @distribution.name %></h1>
</div>
<div class='row-fluid'>
	<div class='span12'>
		<dl class="dl-horizontal">
		  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
		  <dd><%= @distribution.name %></dd>
		  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
		  <dd><%= @distribution.description %></dd>
		</dl>
		<table class="table table-striped">
			  <thead>
			    <tr>
			      <th><%= model_class.human_attribute_name(:title) %></th>
			    </tr>
			  </thead>
			<p><%= render :partial => 'course', :collection => @distribution.courses%></p>
		</table>
	</div>
</div>

<% if current_user.present? && (current_user.has_role? :admin)%>	
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              distributions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_distribution_path(@distribution), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              distribution_path(@distribution),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<% end %>
